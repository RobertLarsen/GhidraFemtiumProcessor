}
:cmne r, x, y is opcode=0b10010 & c=$(CMP_NE) & r & x & y {
    if (!(x != y)) goto <skip>;
    r = x;
    <skip>
}
:cmle r, x, y is opcode=0b10010 & c=$(CMP_LE) & r & x & y {
    if (!(x s<= y)) goto <skip>;
    r = x;
    <skip>
}
:cmlt r, x, y is opcode=0b10010 & c=$(CMP_LT) & r & x & y {
