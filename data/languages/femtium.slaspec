define pcodeop in;
define pcodeop out;
define pcodeop dskr;
define pcodeop dskw;
define pcodeop sys;
define pcodeop bind;
define pcodeop iret;
define pcodeop halt;

:in r, x, y, o is opcode=0b11000 & r & x & y & o {
    in();
}
:out r, x, y, o is opcode=0b11001 & r & x & y & o {
    out();
}
:dskr r, x is opcode=0b11010 & r & x {
    dskr(r, x);
}
:dskw r, x is opcode=0b11011 & r & x {
    dskw(r, x);
}
:sys is opcode=0b11101 {
    sys();
}
:iret is opcode=0b11110 {
    iret();
}
:halt is opcode=0b11111 {
    halt();
}
