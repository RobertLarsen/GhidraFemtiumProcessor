# Conditional branch #
######################
JumpTarget: target is j [ target = inst_start + 4 + (j * 4); ] {
    export *:4 target;
}

:bnz r, x JumpTarget is opcode=0b10111 & c=$(CMP_NZ) & r & x & JumpTarget {
    if (!(r != 0)) goto <skip>;
    goto JumpTarget;
    <skip>
}
:bleu r, x, JumpTarget is opcode=0b10111 & c=$(CMP_LEU) & r & x & JumpTarget {
    if (!(r <= x)) goto <skip>;
    goto JumpTarget;
    <skip>
}
